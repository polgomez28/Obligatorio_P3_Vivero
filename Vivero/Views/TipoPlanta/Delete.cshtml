@model Dominio.TipoPlanta


@{
    ViewData["Título"] = "Eliminar";
}

<h1>Eliminar</h1>

<h3>¿Estás seguro de eliminar este Tipo de Planta?</h3>
<div>
    <h4>Tipo de Planta</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdTipoPlanta)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdTipoPlanta)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TipoNombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TipoNombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TipoDesc)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TipoDesc)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="IdTipoPlanta" />
        <input type="submit" value="Delete" class="btn btn-danger" />

    </form>
    <a asp-controller="TipoPlanta" asp-action="Index"><i class="fa-solid fa-angle-left"></i></a>
</div>