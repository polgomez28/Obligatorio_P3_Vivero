@model Dominio.TipoPlanta

@{
    ViewData["Título"] = "Editar";
}
<h1>Editar</h1>

<h4>Tipo de Planta</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdTipoPlanta" />
            <div class="form-group">
                <label asp-for="TipoNombre" class="control-label"></label>
                <input asp-for="TipoNombre" class="form-control" readonly="readonly"/>
                <span asp-validation-for="TipoNombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoDesc" class="control-label"></label>
                <input asp-for="TipoDesc" class="form-control" />
                <span asp-validation-for="TipoDesc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>