@model IList<Dominio.TipoPlanta>

@{
    ViewData["Titulo"] = "Index";
}
<h1>Lista de Tipos de Plantas</h1>
<p>
    <a asp-action="Create"><i class="fa-solid fa-user-plus"></i></a>
</p>

<table class="table table-hover">
    <thead>
        <tr class="table-primary">
            <th scope="col">
                Nombre
            </th>
            <th scope="col">
                Descripcion
            </th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TipoNombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TipoDesc)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.IdTipoPlanta"><i class="fa-solid fa-pen-to-square"></i></a>
                        <a asp-action="Delete" asp-route-id="@item.IdTipoPlanta"><i class="fa-solid fa-trash-can"></i></a>
                    </td>
                </tr>
            }
        }
        else
        {
            <div class="alert alert-warning" role="alert">
                No existen Tipos ingresados por el momento
            </div>
        }

    </tbody>
</table>

