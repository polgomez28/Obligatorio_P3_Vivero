@model IEnumerable<Dominio.TipoPlanta>
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860

@{
    ViewData["Titulo"] = "Index";
}
<h1>Lista de Tipos de Plantas</h1>

<p>
    <a asp-action="Create">Nuevo Tipo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdTipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DescripcionTipo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdTipo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DescripcionTipo)
                </td>
                <td>
                    <a asp-action="Editar" asp-route-id="@item.IdTipo">Editar</a> |
                    <a asp-action="Detalles" asp-route-id="@item.IdTipo">Detalles</a> |
                    <a asp-action="Borrar" asp-route-id="@item.IdTipo">Borrar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
