@model Dominio.Planta
@{
    ViewData["Title"] = "SearchAmbiente";
}
<h1>Busqueda por ambiente</h1>

<div class="row">
    <div class="col-md-4">
        <div>
            <a asp-action="Index">Listar Todas</a>
        </div>
        <form asp-action="SearchAmbiente" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="Ambiente" class="control-label">Seleccionar ambiente</label>
                <select class="control-label" id="Ambiente" name="Ambiente">
                    <option selected disabled value="">SELECCIONE UN AMBIENTE</option>
                    <option value="Interior">Interior</option>
                    <option value="Exterior">Exterior</option>
                    <option value="Mixta">Mixta</option>

                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Buscar" class="btn btn-primary" />
            </div>
        </form>
    </div>
