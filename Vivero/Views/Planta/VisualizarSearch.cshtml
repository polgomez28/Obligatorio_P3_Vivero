@model IEnumerable<Dominio.Planta>

@{
    ViewData["Title"] = "VisualizarSearch";
}

<h1>VisualizarSearch</h1>

<p>
    <a asp-action="Create"><i class="fa-solid fa-user-plus"></i></a>
</p>
@if (Model.Any())
{

    <table class="table table-hover">
        <thead>
            <tr class="table-primary">
                <th scope="col">
                    @Html.DisplayNameFor(model => model.IdPlanta)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.NombreCientifico)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Descripcion)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Ambiente)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Altura)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.TipoPlanta.TipoNombre)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.TipoPlanta.TipoDesc)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.FichaCuidados.Riego)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.FichaCuidados.Temperatura)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.FichaCuidados.TipoIluminacion.DescripcionTipoIlum)
                </th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdPlanta)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NombreCientifico)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ambiente)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Altura)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TipoPlanta.TipoNombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TipoPlanta.TipoDesc)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FichaCuidados.Riego)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FichaCuidados.Temperatura)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FichaCuidados.TipoIluminacion.DescripcionTipoIlum)
                    </td>

                </tr>
            }

        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning" role="alert">
        No se encontraron Tipos
    </div>
}

<div>
    <a asp-action="Index"><i class="fa-solid fa-angle-left"></i></a>
</div>