@model Dominio.Planta
    ViewData["Title"] = "Search";
}

<h1>Search</h1>

<div class="row">
    <div class="col-md-4">
        <div>
            <a asp-action="Index">Listar Todas</a>
        </div>
        <form asp-action="Search" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="NombreCientifico" class="control-label"></label>
                <input for="NombreCientifico" class="form-control" name="NombreCientifico" />
                <span for="NombreCientifico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoPlanta" class="control-label"></label>
                @Html.DropDownListFor(model => model.TipoPlanta.IdTipoPlanta, new SelectList(@ViewBag.TipoPlanta, "IdTipoPlanta", "TipoNombre"), "Seleccione...", new { @class = "form-control" })
                <span asp-validation-for="@Model.TipoPlanta.IdTipoPlanta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FichaCuidados" class="control-label"></label>
                @Html.DropDownListFor(model => model.FichaCuidados.IdFichaCuidados, new SelectList(@ViewBag.FichaCuidados, "IdFichaCuidados", "Riego"), "Seleccione...", new { @class = "form-control" })
                <span asp-validation-for="@Model.FichaCuidados.IdFichaCuidados" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Ambiente" class="control-label">Seleccionar ambiente</label>
                <select class="control-label" id="Ambiente" name="Ambiente">
                    <option selected disabled value="">SELECCIONE UN AMBIENTE</option>
                    <option value="Interior">Interior</option>
                    <option value="Exterior">Exterior</option>
                    <option value="Mixta">Mixta</option>

                </select>
            </div>
            <div class="form-group">
                <label for="Altura" class="control-label">Más bajas que esta altura</label>
                <input for="Altura" class="form-control" name="Altura" />
                <span for="Altura" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Altura2" class="control-label">Esta altura o más</label>
                <input for="Altura2" class="form-control" name="Altura2" />
                <span for="Altura2" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Buscar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>