@model IList<Dominio.Planta>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<p>
    <a asp-action="CreatePlanta">Crear Planta</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @*@Html.DisplayNameFor(model => model.IdPlanta)*@IdPlanta
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.NombreCientifico)*@NombreCientifico
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Descripcion)*@Descripcion
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.TipoPlanta)*@TipoPlanta
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.FichaCuidados)*@FichaCuidados
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.NombresVulgares)*@NombresVulgares
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Ambiente)*@Ambiente
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Altura)*@Altura
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.NomFotoVariable)*@NomFotoVariable
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdPlanta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombreCientifico)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoPlanta.TipoNombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FichaCuidados.IdFichaCuidados)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombresVulgares)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ambiente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Altura)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomFotoVariable)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdPlanta">Editar</a> |
                <a asp-action="Delete" asp-route-id="@item.IdPlanta">Borrar</a> |
                <a asp-action="Details" asp-route-id="@item.IdPlanta">Detalle</a>                
            </td>
        </tr>
}
    </tbody>
</table>
