@model IList<Dominio.Planta>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de Plantas</h1>

<p>
    <a asp-action="CreatePlanta"><i class="fa-solid fa-user-plus"></i></a>
</p>
<p>
    <a asp-action="Busquedas"><i class="fa-solid fa-magnifying-glass"></i></a>
</p>
<table class="table table-hover">
    <thead>
        <tr class="table-primary">
            
            <th scope="col">
                Planta
            </th>
            <th scope="col">
                Nombre
            </th>
            <th scope="col">
                Descripcion
            </th>
            <th scope="col">
                Tipo
            </th>
            <th scope="col">
                Ficha
            </th>
            <th scope="col">
                Ambiente
            </th>
            <th scope="col">
                Altura
            </th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdPlanta)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NombreCientifico)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TipoPlanta.TipoNombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FichaCuidados.IdFichaCuidados)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ambiente)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Altura)
                    </td>

                    <td>
                        <a asp-action="Edit" asp-route-id="@item.IdPlanta"><i class="fa-solid fa-pen-to-square"></i></a>
                        <a asp-action="Delete" asp-route-id="@item.IdPlanta"><i class="fa-solid fa-trash-can"></i></a>
                        <a asp-action="Details" asp-route-id="@item.IdPlanta"><i class="fa-solid fa-circle-info"></i></a>

                    </td>
                </tr>
            }
        }
        else
        {
            <div class="alert alert-warning" role="alert">
                Ups! No hay plantas para listar.
            </div>
        }

    </tbody>
</table>
